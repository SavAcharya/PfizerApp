<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mphasis.pfizerappDoctor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_patient"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.mphasis.pfizerappDoctor.activity.DashBoardActivity" />
        <activity
            android:name="com.mphasis.pfizerappDoctor.activity.TransactionListActivity"
            android:label="@string/title_activity_transaction_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.mphasis.pfizerappDoctor.activity.SignupActivity"></activity>
        <activity android:name="com.mphasis.pfizerappDoctor.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mphasis.pfizerappDoctor.activity.UserProfileActivity" />
        <activity android:name="com.mphasis.pfizerappDoctor.activity.TransactionDetails"></activity>
    </application>

</manifest>